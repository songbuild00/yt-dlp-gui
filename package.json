{
	"name": "yt-dlp-gui",
	"version": "1.1.0",
	"description": "A simple GUI application for the yt-dlp library.",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder"
	},
	"author": "s0n9",
	"license": "ISC",
	"devDependencies": {
		"electron": "^38.2.1",
		"electron-builder": "^26.0.12"
	},
	"build": {
		"appId": "dev.s0n9.yt-dlp-gui",
		"productName": "yt-dlp-gui",
		"mac": {
			"category": "public.app-category.utilities",
			"target": "dmg",
			"icon": "build/icon.icns"
		},
		"files": [
			"main.js",
			"preload.js",
			"index.html",
			"renderer.js"
		],
		"extraResources": [
			{
				"from": "bin/",
				"to": "bin/"
			}
		],
		"directories": {
			"output": "dist"
		}
	}
}
